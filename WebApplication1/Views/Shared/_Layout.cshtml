<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="\WebApplication1\StyleSheet.css" />
    <title>@ViewData["Title"] - WebApplication1</title>

    <style>

        * {
            box-sizing: border-box;
        }

        header {
            background-color: orange;
            color: black;
            padding: 10px;
            margin: 10px;
        }

        .menu ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        .menu li {
            padding: 8px;
            margin-bottom: 7px;
            color: #ffffff;
        }
        .row::after {
            content: "";
            clear: both;
            display: table;
        }

        [class*="col-"] {
            float: left;
            padding: 15px;
            border: 1px solid red;  /*commenting this out caused "Unterminated string literal" error?????*/
        }

        .col-1 {
            width: 8.33%;
        }

        .col-2 {
            width: 16.66%;
        }

        .col-3 {
            width: 25%;
        }

        .col-4 {
            width: 33.33%;
        }

        .col-5 {
            width: 41.66%;
        }

        .col-6 {
            width: 50%;
        }

        .col-7 {
            width: 58.33%;
        }

        .col-8 {
            width: 66.66%;
        }

        .col-9 {
            width: 75%;
        }

        .col-10 {
            width: 83.33%;
        }

        .col-11 {
            width: 91.66%;
        }

        .col-12 {
            width: 100%;
        }
        body {
            background-color: orange;
        }

        #one {/*Rename this ID, its a button!!!*/
            display: inline-block;
            padding: 15px 25px;
            font-size: 22px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: #4CAF50;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
        }

        #one {
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
        }

            #one:hover {
                background-color: #3e8e41
            }

            #one:active {
                background-color: #3e8e41;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

        #two{
            display: inline-block;
            padding: 5px 25px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: #4CAF50;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
        }

        #two{/* I definetly need to rename this button id*/
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
        }

            #two:hover {
                background-color: #3e8e41
            }

            #two:active {
                background-color: #3e8e41;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }
        .welcomeClass {
            text-align: center;
        }
        #homePageLink {
        }
        #logOffLink {
            text-align: right;
        }
        a:hover {
            color: #ffffff;
        }
        .form-group{
            margin: 5px;
        }
    </style>

</head>
<body>
    <div class="row">
        <header>
            @if (ViewBag.UserScreenName != null)
            {
            <div class="col-5" id="homePageLink"><a asp-controller="User" asp-action="index">@ViewBag.UserScreenName's Home Page</a></div>
            <div class="col-7" id="logOffLink"><a asp-controller="User" asp-action="LogOff">LogOff</a></div>

            }
            @if (ViewBag.SessionScreenName != null)
            {
                <h1>Hello @ViewBag.SessionScreenName!!!</h1>

            }
        </header>
    </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - WebApplication1</p>
        </footer>
</body>
</html>
